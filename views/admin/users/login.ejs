<%- include('../../partials/header.ejs')%>

    <div class="container">
        <div class="card mt-4">
            <div class="card-header">
                <h2>Login de admin</h2>
            </div>

            <div class="card-body">
                <form method="POST" action="/authenticate">
                    <input  class="form-control" name="email" type="email" placeholder="email@exemplo.com">
                    <input class="form-control" name="password" type="password" placeholder="****">
                    <!-- btn-block faz que o botao ocupe todo o conteudo pai dele -->
                    <button type="submit" class="btn btn-success btn-block">Logar</button>

                </form>
            </div>
        </div>

    </div>


