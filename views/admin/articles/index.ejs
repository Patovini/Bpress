<%- include('../../partials/header.ejs')%>
<%- include('../../partials/navbar.ejs')%>
<div class="container">
    <hr>
    <h1>Artigos home</h1>
    <a class="btn btn-success" href="/admin/articles/new">Criar novo artigo</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Açoes</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(function(article){ %>
                <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td><%= article.category.title %></td>
                <td> 
                    <a class='btn btn-warning' href="/admin/articles/edit/<%= article.id %>">Editar</a>

                    <form method="POST" action="/admin/articles/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                    <input type="hidden" name="id1" value="<%= article.id %>">
                    <button class="btn btn-danger">Deletar</button>
                    </form>
                    </td>
                </tr>   
            <% }) %>
        </tbody>
    </table>

</div>

<%- include('../../partials/footer.ejs')%>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault(); // impede que seja submetido
        
        //confirm é um elemento do js, onde manda um popup com sim ou nao
        var decision = confirm("Deseja excluir esse artigo?");
        if(decision){
            form.submit(); // Se sim ele vai puxar o form acima que vai deletar
        }else{
            
        }
    }
</script>